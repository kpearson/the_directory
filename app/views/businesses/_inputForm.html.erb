<% if @business.errors.any? %>
  <h2>There were errors saving your business info.</h2>
  <ul>
    <% @business.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @business do |b| %>
	<p>
	<%= form.label :Name %>
	<%= form.text_field :name %>
	</p>
	<p>
	<%= form.label :Discription %>
	<%= form.text_area :description %>
	</p>
	<%= form.submit %>
<% end %>